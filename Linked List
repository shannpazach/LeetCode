class Main{
    Node head;
    int length;
    
    Main(){
        this.length = 0;
    }
    
    class Node{
        int data;
        Node next;
        
        Node(int data){
        this.data = data;
        this.next = null;
        }
    }
    
    public void addFirst(int data){
        Node newNode = new Node(data);
        length++;
        if(head ==  null){
            head = newNode;
            return;
        }
        
        newNode.next = head;
        head = newNode;
    }
    
    public void addLast(int data){
        Node newNode = new Node(data);
        Node currNode = head;
        length++;
        if(head == null){
            head = newNode;
            return;
        }
        
        while(currNode.next!=null){
            currNode = currNode.next;
        }
        currNode.next = newNode;
    }
    
    public void deleteFirst(){
        if(head == null){
            System.out.print("Empty LL");
            return;
        }
        else{
            head = head.next;
            length--;
        }
    }
    
    public void deleteLast(){
        Node currNode = head;
        if(head == null){
            System.out.print("Empty LL");
            return;
        }
        while(currNode.next.next!=null){
            currNode = currNode.next;
        }
        currNode.next = null;
        length--;
    }
    
    public int checkLength(){
        return length;
    }
    
    public void printLL(){
        Node currNode = head;
        if(head == null){
            System.out.print("Empty LL");
            return;
        }
        else{
            while(currNode!=null){
                System.out.print(currNode.data+"->");
                currNode = currNode.next;
            }
        }
        System.out.print("NULL");
        System.out.println();
    }
    
    public void addAfter(int element, int nodeElement){
        Node newNode = new Node(nodeElement);
        Node currNode = head;
        
        if(head == null){
            head = newNode;
            return;
        }
        
        while(currNode!=null){
            if(currNode.data == element){
                newNode.next = currNode.next;
                currNode.next = newNode;
                length++;
                return;
            }
            currNode = currNode.next;
        }
    }
    
    public void insertAtPos(int pos, int newNodeElement){
        Node newNode = new Node(newNodeElement);
        Node currNode = head;
        
        if(pos<0 || pos>length){
            System.out.print("Invalid position");
            return;
        }
        
        int count = 0;
        if(pos==0){
            newNode.next = head;
            head = newNode;
            length++;
            return;
        }
        
        while(count<pos-1){
            currNode = currNode.next;
            count++;
        }
        newNode.next = currNode.next;
        currNode.next = newNode;
        length++;
        return;
        
    }
    
    public void deleteSpecificNode(int element){
        Node currNode = head;
        
        if(head == null){
            System.out.print("Empty LL");
            return;
        }
        
        while(currNode!=null){
            if(currNode.next.data == element){
                currNode.next = currNode.next.next;
                length--;
                return;
            }
            currNode = currNode.next;
        }
    }
    
    public static void main(String args[]){
        Main linked = new Main();
        linked.addLast(2);
        linked.addFirst(1);
        linked.addLast(3);
        // linked.deleteFirst();
        // linked.deleteLast();
        // linked.addAfter(2,0);
        // linked.insertAtPos(0,0);
        linked.deleteSpecificNode(2);
        linked.printLL();
        System.out.print(linked.checkLength());
    }
}
